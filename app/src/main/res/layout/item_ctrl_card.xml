<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="92.67dp"
    android:layout_margin="3.33dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ctrl_group_name"
            android:layout_width="wrap_content"
            android:layout_height="23.33dp"
            android:layout_marginStart="16.67dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="第一组"
            android:textColor="@color/colorGroupName"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/colorGroupLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="69.33dp">

            <ImageView
                android:id="@+id/img_ctrl_group_switch"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12.67dp"
                android:layout_marginStart="16.67dp"
                android:src="@drawable/ic_switch" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16.67dp"
                android:layout_toEndOf="@id/img_ctrl_group_switch"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35.33dp"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_control_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_ctrl_group_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="请添加设备到分组"
                        android:textColor="@color/colorGroupName"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/img_ctrl_group_add"
                        android:layout_width="16.67dp"
                        android:layout_height="16.67dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="13.33dp"
                        android:src="@drawable/ic_ctrl_add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="17.33dp"
                    android:background="@drawable/shape_config_btn"
                    android:padding="0.5dp">

                    <com.allen.library.SuperButton
                        android:layout_width="41.67dp"
                        android:layout_height="match_parent"
                        android:text="流水灯"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        stv:sSelectorDisableColor="@color/colorPrimary"
                        stv:sSelectorNormalColor="@color/colorWhite"
                        stv:sUseSelector="true" />

                    <com.allen.library.SuperButton
                        android:layout_width="33.33dp"
                        android:layout_height="match_parent"
                        android:text="配置"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        stv:sSelectorDisableColor="@color/colorPrimary"
                        stv:sSelectorNormalColor="@color/colorPrimary"
                        stv:sUseSelector="true" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>