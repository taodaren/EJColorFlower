<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".view.activity.DeMasterModeActivity">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/text_dev_num"
            android:textColor="@color/colorConfig"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_dev_num"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_bg"
            android:hint="@string/please_input"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/colorTitleName"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_dev_num"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_jet_start"
            android:textColor="@color/colorNoClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/text_start_dmx"
            android:textColor="@color/colorConfig"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_start_dmx"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_bg"
            android:hint="@string/please_input"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/colorTitleName"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_start_dmx"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_jet_pause"
            android:textColor="@color/colorNoClick" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_master_mode"
        android:layout_width="match_parent"
        android:paddingBottom="0.5dp"
        android:layout_height="wrap_content"
        android:background="@color/colorGroupLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img_add_master_mode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_new_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_add_master_mode"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:text="@string/add_jet_effect"
            android:textColor="@color/colorTitleName"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>