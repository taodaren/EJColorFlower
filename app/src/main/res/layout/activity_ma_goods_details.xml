<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".view.activity.MaGoodsDetailsActivity">

    <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/rv_goods_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rimg_del_return"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="20dp"
        android:background="@color/colorTransparent50"
        android:padding="6dp"
        android:src="@drawable/ic_del_return"
        app:riv_mutate_background="true"
        app:riv_oval="true" />

    <LinearLayout
        android:id="@+id/ll_goods_details"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTransparent"
        android:padding="2dp">

        <Button
            android:id="@+id/btn_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/shape_btn_kefu"
            android:drawableStart="@drawable/ic_kefu"
            android:drawablePadding="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/customer_service"
            android:textColor="@color/colorNoClick"
            android:textSize="18sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_goods_dtl"
            android:text="@string/buy_now"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</RelativeLayout>