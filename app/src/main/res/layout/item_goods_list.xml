<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorWhite"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_goods_list"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo_img"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_sold_out"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/colorTransparent50"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:text="卖光了"
                android:textColor="@color/line"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_goods_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_goods_list"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="炫彩烟花"
                android:textColor="@color/colorConfig"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goods_list_title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/tv_goods_list_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥2000.0"
                    android:textColor="@color/colorRmb"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_goods_list_rmb_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/tv_goods_list_rmb"
                    android:text="￥2500.0"
                    android:textColor="@color/colorNoClick"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>