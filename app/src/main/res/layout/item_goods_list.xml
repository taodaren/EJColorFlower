<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/img_goods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_goods_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="炫彩烟花"
        android:textColor="@color/colorConfig"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_goods_list_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥2000.0"
            android:textColor="@color/colorRmb"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_goods_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/tv_goods_list_rmb"
            android:text="已售22"
            android:textColor="@color/colorNoClick"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_goods_list_has"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:text="无货"
            android:textColor="@color/colorNoClick"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>