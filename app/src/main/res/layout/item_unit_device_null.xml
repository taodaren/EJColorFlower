<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_device_null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/text_device_null"
        android:textColor="@color/colorNoClick"
        android:textSize="16sp" />

    <Button
        android:id="@+id/home_null_device"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_null_device_btn"
        android:text="@string/text_add_device_null"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />
</LinearLayout>