<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DeviceDetailsActivity">

    <include
        android:id="@+id/toolbar_device_dtl"
        layout="@layout/layout_toolbar" />

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tl_device_del"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        app:tl_bar_color="@color/colorWhite"
        app:tl_divider_color="@color/colorPrimary"
        app:tl_divider_width="1dp"
        app:tl_indicator_anim_enable="true"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_corner_radius="3dp"
        app:tl_indicator_margin_bottom="2dp"
        app:tl_indicator_margin_left="2dp"
        app:tl_indicator_margin_right="2dp"
        app:tl_indicator_margin_top="2dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_device"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_add_material"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:text="@string/add_material"
        android:textColor="@color/white"
        app:sCornersRadius="50dp"
        app:sSelectorDisableColor="@color/colorGray"
        app:sSelectorNormalColor="@color/colorPrimary"
        app:sUseSelector="true" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_remove_device"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:text="@string/remove_device"
        android:textColor="@color/white"
        app:sCornersRadius="50dp"
        app:sSelectorDisableColor="@color/colorGray"
        app:sSelectorNormalColor="@color/colorPrimary"
        app:sUseSelector="true" />
</LinearLayout>