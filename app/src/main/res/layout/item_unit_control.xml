<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_ctrl_group_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:text="@string/please_add_device"
                android:textSize="12sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_control_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_ctrl_group_add"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_add_solid_black"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/colorWhite">

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/bubble_seek_bar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="12dp"
                stv:bsb_track_size="4dp" />

            <ImageView
                android:id="@+id/img_ctrl_group_switch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_switch_on"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="60dp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                tools:ignore="RelativeOverlap">

                <com.allen.library.SuperButton
                    android:id="@+id/sb_ctrl_group_time"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    stv:sCornersRadius="50dp"
                    stv:sSolidColor="@color/colorTransparent"
                    stv:sStrokeColor="@color/colorPrimary"
                    stv:sStrokeWidth="0.2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="@string/spray_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <Chronometer
                    android:id="@+id/ch_ctrl_group_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_group_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_hollow_round"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_ctrl_group_name"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:background="@color/colorRed">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/slide_left_to_delete"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>