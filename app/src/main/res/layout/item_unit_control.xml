<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_ctrl_group_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:text="请添加设备到分组"
            android:textSize="12sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_ctrl_group_add"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_add_solid_black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_control_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorWhite">

        <SeekBar
            android:id="@+id/seek_bar_control"
            android:layout_width="100dp"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/img_ctrl_group_switch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_switch_on" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.allen.library.SuperButton
                android:id="@+id/sb_ctrl_group_time"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                stv:sCornersRadius="50dp"
                stv:sSolidColor="@color/colorTransparent"
                stv:sStrokeColor="@color/colorPrimary"
                stv:sStrokeWidth="0.2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="喷射时间"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <Chronometer
                android:id="@+id/ch_ctrl_group_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_group_name"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_hollow_round" />

    <TextView
        android:id="@+id/tv_ctrl_group_name"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="打发了"
        android:textSize="13sp" />
</RelativeLayout>