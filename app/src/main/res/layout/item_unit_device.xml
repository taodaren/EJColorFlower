<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:paddingStart="100dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <com.allen.library.SuperButton
                    android:id="@+id/sb_device_temp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:textSize="10sp"
                    stv:sShapeType="oval"
                    stv:sSolidColor="@color/colorPrimary"
                    stv:sStrokeWidth="0.5dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sb_device_temp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_temp"
                    android:textColor="@color/colorBlack" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <com.allen.library.SuperButton
                    android:id="@+id/sb_device_dmx"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:textSize="10sp"
                    stv:sShapeType="oval"
                    stv:sSolidColor="@color/colorOrange"
                    stv:sStrokeWidth="0.5dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sb_device_dmx"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_dmx"
                    android:textColor="@color/colorBlack" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <com.allen.library.SuperButton
                    android:id="@+id/sb_device_time"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:textSize="10sp"
                    stv:sShapeType="oval"
                    stv:sSolidColor="@color/colorBlue"
                    stv:sStrokeWidth="0.5dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sb_device_time"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_time"
                    android:textColor="@color/colorBlack" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_add_device"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_device_id"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/tv_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:text="@string/connected_false" />

</RelativeLayout>