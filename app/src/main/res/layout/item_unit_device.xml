<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    stv:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/layout_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDeviceLine"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:text="设备名称："
                android:textColor="@color/colorTitleName"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_device_name"
                android:text="810316"
                android:textColor="@color/colorTitleName"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp">

                <ImageView
                    android:id="@+id/img_conn_status"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_switch_off" />

                <TextView
                    android:id="@+id/tv_connected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/img_conn_status"
                    android:text="@string/connected_false"
                    android:textColor="@color/colorConfig"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_connected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="@string/connected_false"
                android:textColor="@color/colorConfig"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_device_temp"
                    android:layout_width="92dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_device_temp"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_device_temp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="34 ℃"
                    android:textColor="@color/colorConfig"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_device_dmx"
                    android:layout_width="92dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_device_dmx"
                    android:padding="4dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_device_dmx"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="DMX 4"
                    android:textColor="@color/colorConfig"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_device_time"
                    android:layout_width="92dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_device_time"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_device_time"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="04:34"
                    android:textColor="@color/colorConfig"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/img_last_day"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_switch_off" />

            <TextView
                android:id="@+id/tv_last_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/img_last_day"
                android:text="剩余使用天数：永久使用"
                android:textSize="14sp" />

            <Button
                android:layout_width="81dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:text="延长天数"
                android:textSize="12sp"
                android:background="@drawable/shape_btn_color_no"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>