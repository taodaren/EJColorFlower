<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="139dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    stv:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGroupLine">

        <View
            android:layout_width="match_parent"
            android:layout_height="40.5dp"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:paddingStart="100dp"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <com.allen.library.SuperButton
                        android:id="@+id/sb_device_temp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:padding="4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        stv:sShapeType="oval"
                        stv:sSolidColor="@color/colorPrimary"
                        stv:sStrokeWidth="0.5dp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sb_device_temp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/text_temp"
                        android:textColor="@color/colorTitleName" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <com.allen.library.SuperButton
                        android:id="@+id/sb_device_dmx"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:padding="4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        stv:sShapeType="oval"
                        stv:sSolidColor="@color/colorOrange"
                        stv:sStrokeWidth="0.5dp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sb_device_dmx"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/text_dmx"
                        android:textColor="@color/colorTitleName" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <com.allen.library.SuperButton
                        android:id="@+id/sb_device_time"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:padding="4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        stv:sShapeType="oval"
                        stv:sSolidColor="@color/colorBlue"
                        stv:sStrokeWidth="0.5dp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sb_device_time"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/text_time"
                        android:textColor="@color/colorTitleName" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/img_device_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_device_id"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:text="@string/connected_false" />
    </RelativeLayout>
</android.support.v7.widget.CardView>