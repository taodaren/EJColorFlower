<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#fff"
                android:padding="15dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请添加设备到分组"
        android:textSize="12sp"
        android:visibility="visible"        />

    <ImageView
        android:id="@+id/item_add"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add_solid_black"        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/item_rv"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_hollow_round"        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rv"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/item_name"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喷射时间"
            android:textSize="10sp"            />

        <Chronometer
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"            />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_rv"
        android:src="@drawable/ic_switch_on"        />

    <SeekBar
        android:id="@+id/item_sb"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rv"/>
</android.support.constraint.ConstraintLayout>