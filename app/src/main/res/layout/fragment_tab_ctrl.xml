<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context=".view.fragment.TabCtrlFragment">

    <include
        android:id="@+id/toolbar_tab_ctrl"
        layout="@layout/layout_toolbar" />

    <Button
        android:id="@+id/btn_ctrl_ble_conn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_btn_public"
        android:elevation="4dp"
        android:text="扫描连接设备"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_ctrl_ble_conn"
        android:layout_below="@id/toolbar_tab_ctrl"
        android:layout_marginTop="48dp">

        <ImageView
            android:layout_width="278dp"
            android:layout_height="278dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_dev_ble" />
    </RelativeLayout>

</RelativeLayout>