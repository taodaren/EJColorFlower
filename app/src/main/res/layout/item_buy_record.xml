<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_dialog_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_num_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="商品名称："
            android:textColor="@color/colorConfig"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="什么名称"
            android:textColor="@color/colorConfig"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_num_name"
            app:layout_constraintStart_toEndOf="@+id/tv_num_name"
            app:layout_constraintTop_toTopOf="@+id/tv_num_name" />

        <View
            android:id="@+id/view_time_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_goods_name" />

        <TextView
            android:id="@+id/tv_num_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="购买数量："
            android:textColor="@color/colorConfig"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_time_line" />

        <TextView
            android:id="@+id/tv_num_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="20dp"
            android:text="交易时间："
            android:textColor="@color/colorConfig"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_name2" />

        <TextView
            android:id="@+id/tv_buy_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorNoClick"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_num_name2"
            app:layout_constraintStart_toEndOf="@+id/tv_num_name2"
            app:layout_constraintTop_toTopOf="@+id/tv_num_name2" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorNoClick"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_num_name3"
            app:layout_constraintStart_toEndOf="@+id/tv_num_name3"
            app:layout_constraintTop_toTopOf="@+id/tv_num_name3" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>