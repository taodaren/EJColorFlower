<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.eejing.ejcolorflower">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" /> <!-- 使用照相机权限 -->
    <uses-feature android:name="android.hardware.camera.autofocus" /> <!-- 自动聚焦权限 -->

    <application
        android:name=".app.GApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".app.MainActivity" />
        <activity android:name=".ui.activity.QRCodeActivity" />
        <activity android:name=".ui.activity.RegisterActivity" />
        <activity android:name=".ui.activity.ForgetPwdActivity" />
        <activity android:name=".ui.activity.CoDeviceActivity" />
        <activity android:name=".ui.activity.MaGoodsDetailsActivity" />
        <activity android:name=".ui.activity.MiOpinionActivity" />
        <activity android:name=".ui.activity.MiAboutActivity" />
        <activity android:name=".ui.activity.MiSetActivity" />
        <activity android:name=".ui.activity.MiUserInfoActivity" />
        <activity android:name=".ui.activity.MiModifyPwdActivity" />
        <activity android:name=".ui.activity.MiOrderActivity" />
    </application>

</manifest>